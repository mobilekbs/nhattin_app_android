<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/ivStopPlaceItem"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.5"
                    app:srcCompat="@mipmap/ic_bg_number_yellow" />

                <ImageView
                    android:id="@+id/ivStopPlaceItem1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@mipmap/ic_bg_number_yellow"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tvNumberHub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_body"
                    android:layout_gravity="center" />

            </FrameLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:background="@color/colorGray"
                android:layout_gravity="center_horizontal"
                android:id="@+id/vItemHub1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvAddressItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_body"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorBlackGray"
        android:layout_marginLeft="34dp" />-->
</LinearLayout>