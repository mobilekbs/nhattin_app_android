<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.OrderDetail.ServiceFeeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimarySub">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnSenderFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <vn.ntlogistics.app.ordermanagement.Commons.CustomViews.HeaderLayout
                        android:id="@+id/headerSend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        app:showCheckbox="false"
                        app:showConfirmCode="true"
                        app:tvTitle="@string/collecting_sender"
                        app:tvTitleConfirm="@string/total" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/freight_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvFreightFeeReciver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/added_service_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvAddedServiceFeeReciver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/AppTheme.Widget.TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/cod_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvCODFeeSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/total_revenue"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvColectingRevenueReciver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/AppTheme.Widget.TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/vat"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvVATSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="New Text"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/AppTheme.Widget.TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/extra_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvExtraFeeSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnRevenueSender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <vn.ntlogistics.app.ordermanagement.Commons.CustomViews.HeaderLayout
                        android:id="@+id/headerFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        app:showCheckbox="false"
                        app:showConfirmCode="true"
                        app:tvTitle="@string/fee_detail"
                        app:tvTitleConfirm="@string/total" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/main_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/sub_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/added_service_fee3"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/total_revenue4"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/total_fee"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/vat"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvVAT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="New Text"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:text="@string/total_revenue"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />

                            <TextView
                                android:id="@+id/tvTotalFee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/colorTextValueDetail"
                                android:textSize="@dimen/textsize_body_order_detail" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</FrameLayout>
