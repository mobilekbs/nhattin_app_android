<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.ntlogistics.app.ordermanagement.Commons.CustomViews.HeaderLayout
            android:id="@+id/headerReceive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            app:showCheckbox="false"
            app:showConfirmCode="true"
            app:tvTitle="@string/collecting_receiver"
            app:tvTitleConfirm="@string/total" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/adress"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:text=":"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvAddressSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/freight_fee"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvFreightFeeSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/added_service_fee"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvAddedServiceFeeSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/cod_fee"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvCODFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/total_revenue"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvColectingRevenueSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/vat"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvVATReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="New Text"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="@string/extra_fee"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />

                <TextView
                    android:id="@+id/tvExtraFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorTextValueDetail"
                    android:textSize="@dimen/textsize_body_order_detail" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>