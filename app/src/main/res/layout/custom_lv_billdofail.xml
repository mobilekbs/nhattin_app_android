<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDOFail"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_margin="3dp"
    android:background="@drawable/listview_ds2"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Số DO: "
            android:textColor="#4a4849" />

        <TextView
            android:id="@+id/tvSDO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#4a4849" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="Trọng lượng: "
            android:textColor="#4a4849" />

        <TextView
            android:id="@+id/tvTLDO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#4a4849" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:text=""
            android:id="@+id/tvStatusDO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:textStyle="italic"
            android:paddingLeft="0dp"
            android:textColor="#dd0a0a"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="Số lượng      : "
            android:textColor="#4a4849" />

        <TextView
            android:id="@+id/tvSLDO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#4a4849" />
    </LinearLayout>

</LinearLayout>