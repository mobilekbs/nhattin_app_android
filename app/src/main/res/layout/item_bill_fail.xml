<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutFAIL"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        android:background="@drawable/listview_ds2"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hardTvSVD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:text="Số vận đơn:"
                android:textColor="#4a4849"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvSVD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#4a4849"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/hardTvApollo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="Tiền Apollo:"
                android:textColor="#4a4849"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvApollo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#4a4849"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text=""
                android:textColor="#dd0a0a"
                android:textSize="10dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvisDO"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text=""
                android:textColor="#dd0a0a"
                android:textSize="1dp"
                android:textStyle="italic"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/hardTvTienthuho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="Tiền thu hộ:"
                android:textColor="#4a4849"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvTienthuho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#4a4849"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>
</layout>