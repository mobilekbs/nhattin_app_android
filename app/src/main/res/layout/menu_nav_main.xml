<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="vn.ntlogistics.app.shipper.ViewModels.MainVMs.MainActivityViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bg_menu_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/menu_my_page"
                        android:onClick="@{viewModel::onClick}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_menu_profile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_my_page"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_body" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:id="@+id/bg_menu_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:onClick="@{viewModel::onClick}"
                        android:id="@+id/menu_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_menu_historyorder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_my_order"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_body" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />


                <LinearLayout
                    android:id="@+id/bg_menu_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:onClick="@{viewModel::onClick}"
                        android:id="@+id/menu_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_qr_code_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_code"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_body" />

                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textsize_sub_title"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:id="@+id/bg_menu_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:onClick="@{viewModel::onClick}"
                        android:id="@+id/menu_notify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/ic_menu_notification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/menu_note"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_body" />

                        <TextView
                            android:id="@+id/tvNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textsize_sub_title"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_hotline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/menu_hotline"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                    <TextView
                        android:id="@+id/tvPhoneHotline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/hotline"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/textsize_title" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_setting"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_about_us"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_toturial"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_tutorial"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_other_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_other_info"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_contract"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_contract"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGrayTrangsperant" />

                <LinearLayout
                    android:onClick="@{viewModel::onClick}"
                    android:id="@+id/menu_out"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_size_item"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/menu_out"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_body" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>