<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Olds.Activities.BillDOActivity"
    android:fillViewport="true">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarBillDO"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/AppTheme.Toolbar.TextAppearance" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/loMainBillDO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimarySub"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtBill_DO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.9"
                    android:background="@drawable/editextmain_design"
                    android:hint="Nhập số DO"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:textColor="@color/colorGrayGray"
                    android:textColorHint="@color/colorBlackGray"
                    android:textSize="@dimen/textsize_body_2" />

                <Button
                    android:id="@+id/btnScan_DO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_design1"
                    android:gravity="center"
                    android:text="Scan"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/number_of_package"
                    android:textColor="@color/colorAccentSub1"
                    android:textSize="@dimen/textsize_body_2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSokien_DO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextmain_design"
                    android:digits="0123456789"
                    android:hint="0"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrayGray"
                    android:textColorHint="@color/colorBlackGray"
                    android:textSize="@dimen/textsize_body_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/weight"
                    android:textColor="@color/colorAccentSub1"
                    android:textSize="@dimen/textsize_body_2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTL_DO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextmain_design"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrayGray"
                    android:textColorHint="@color/colorBlackGray"
                    android:textSize="@dimen/textsize_body_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/number_of_count_1"
                    android:textColor="@color/colorAccentSub1"
                    android:textSize="@dimen/textsize_body_2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSL_DO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextmain_design"
                    android:hint="0"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrayGray"
                    android:textColorHint="@color/colorBlackGray"
                    android:textSize="@dimen/textsize_body_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="@string/weight_change_1"
                    android:textColor="@color/colorAccentSub1"
                    android:textSize="@dimen/textsize_body_2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTLQD_DO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editextmain_design"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrayGray"
                    android:textColorHint="@color/colorBlackGray"
                    android:textSize="@dimen/textsize_body_2" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSend_DO"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_design1"
                android:text="Send"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>