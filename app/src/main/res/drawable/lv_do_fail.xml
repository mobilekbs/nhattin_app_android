<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#000000" />

            <gradient android:centerColor="#45a4af" android:endColor="#45a4af" android:startColor="#45a4af" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
             <gradient android:centerColor="#e0e0e1" android:endColor="#e0e0e1" android:startColor="#e0e0e1" />
        </shape></item>

</selector>